{
    // See https://go.microsoft.com/fwlink/?LinkId=733558
    // for the documentation about the tasks.json format
    "version": "2.0.0",
    "tasks": [
        {
            "label": "g++",
            "type": "shell",
            "command": "g++",
            "args": [
                "-g",
                "${file}",
                "-o",
                "${file}.exe",
                "-std=c++11"
            ],
            "problemMatcher": []
        },
        {
            "label": "fpc",
            "type": "shell",
            "command": "fpc",
            "args": [
                "${relativeFile}"
            ],
            "problemMatcher": []
        },
        {
            "label": "Open Terminal",
            "type": "shell",
            "command": "osascript -e 'tell application \"Terminal\"\ndo script \"echo hello\"\nend tell'",
            "problemMatcher": []
        }
    ]
}